{
  "name": "node-server-starter",
  "type": "commonjs",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/node-server-starter",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsx watch src/node.ts",
    "dev:h3": "tsx watch src/h3.ts",
    "dev:express": "tsx watch src/express.ts",
    "dev:ws": "tsx watch src/ws.ts",
    "dev:vercel": "tsx watch scripts/vercel.dev.ts",
    "build": "rimraf dist && tsc --noEmit && tsup",
    "start": "node dist/node.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "express": "^4.19.2",
    "h3": "^1.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.26.0",
    "@eiog/ts-config": "^0.0.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.4.2",
    "@types/ws": "^8.5.12",
    "chalk": "^5.3.0",
    "commitlint": "^19.4.0",
    "consola": "^3.2.3",
    "cz-git": "^1.9.4",
    "czg": "^1.9.4",
    "eslint": "^9.9.0",
    "lint-staged": "^15.2.9",
    "listhen": "^1.7.2",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.6",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vercel": "^36.0.0",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
