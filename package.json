{
  "name": "node-server-starter",
  "type": "commonjs",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/node-server-starter",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsx watch src/node.ts",
    "dev:h3": "tsx watch src/h3.ts",
    "dev:express": "tsx watch src/express.ts",
    "dev:vercel": "tsx scripts/generate-router.ts && tsx watch scripts/vercel.dev.ts",
    "build": "rimraf dist && tsc --noEmit && tsup",
    "start": "node dist/node.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "express": "^4.19.2",
    "h3": "^1.11.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.1",
    "@eiog/ts-config": "^0.0.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "chalk": "^5.3.0",
    "commitlint": "^19.3.0",
    "consola": "^3.2.3",
    "cz-git": "^1.9.1",
    "czg": "^1.9.1",
    "eslint": "^9.3.0",
    "lint-staged": "^15.2.2",
    "listhen": "^1.7.2",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.13.8",
    "tsup": "^8.0.2",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "vercel": "^34.2.0",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
